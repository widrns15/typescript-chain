{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "build",
    "jsx": "preserve",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "lib": ["es6", "dom"],
    "strict": true,
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowJs": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/external", "node_modules"]
}
